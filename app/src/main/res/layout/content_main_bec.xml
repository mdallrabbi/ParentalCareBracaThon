<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main_bec"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mdallrabbi.parentalcarebracathon.MainBecActivity"
    tools:showIn="@layout/app_bar_main_bec">

    <Button
        android:text="Eye, Hearing, Linguistics"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button10"
        android:layout_alignStart="@+id/button10"
        android:layout_marginTop="18dp"
        android:id="@+id/button11" />

    <Button
        android:text="Movement Analysis"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/button10"
        android:layout_below="@+id/button9"
        android:layout_alignStart="@+id/button9"
        android:textAlignment="center" />

    <Button
        android:text="Additute Activity"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/button9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Parental Games"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/button13"
        android:layout_below="@+id/button12"
        android:layout_alignStart="@+id/button12" />

    <Button
        android:text="Child Analytical Ability"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/button12"
        android:layout_below="@+id/button11"
        android:layout_alignStart="@+id/button11" />

    <Button
        android:text="Baby Life Style"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button13"
        android:layout_alignStart="@+id/button13"
        android:layout_marginTop="18dp"
        android:id="@+id/button14"
        android:textAlignment="center" />
</RelativeLayout>
